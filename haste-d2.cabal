-- patches.
maintainer:          rprospero@gmail.com

-- A copyright notice.
-- copyright:           

category:            Graphics

build-type:          Simple

-- Extra files to be distributed with the package, such as examples or a 
-- README.
-- extra-source-files:  

-- Constraint on the version of Cabal needed to build this package.
cabal-version:       >=1.10


library
  -- Modules exported by the library.
  exposed-modules: Haste.D2.Scale,Haste.D2.SVG.Axis,Haste.D2.Select,Haste.D2.SVG
  
